<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<org.ametro.widget.VectorMapView
		android:id="@+id/browse_vector_map_view" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />


	<RelativeLayout android:id="@+id/browse_vector_map_search_panel" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" android:background="#ff000000"
		android:orientation="horizontal">
		
		<AutoCompleteTextView android:id="@+id/browse_vector_map_search_edit"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="5px" 
			/>
		
		<ImageButton android:id="@+id/browse_vector_map_search_button"
			android:background="#00000000"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@android:drawable/ic_input_delete"
			android:layout_marginTop="10px"
			android:layout_marginRight="5px"
			android:layout_alignParentRight="true"
			/>
					
	</RelativeLayout>

	<FrameLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true">
		<ZoomControls android:id="@+id/browse_vector_map_zoom"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:layout_marginRight="10px" />
	</FrameLayout>

</RelativeLayout>

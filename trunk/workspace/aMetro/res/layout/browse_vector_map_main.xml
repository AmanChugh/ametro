<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">

	<org.ametro.widget.VectorMapView
		android:id="@+id/browse_vector_map_view" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

	<LinearLayout
		android:id="@+id/browse_vector_map_selection_panel_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="10dip"
		android:orientation="vertical"
		>
		
		<ImageButton android:id="@+id/browse_vector_map_button_list_selection"
			android:layout_width="70dip" 
			android:layout_height="50dip"
			android:src="@drawable/icon_list"
			/>	

		<ImageButton android:id="@+id/browse_vector_map_button_clear_selection"
			android:layout_width="70dip" 
			android:layout_height="50dip"
			android:src="@android:drawable/ic_delete"
			/>					
					
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/browse_vector_map_selection_panel_bottom" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="5dip"
		android:layout_marginLeft="5dip"
		android:orientation="horizontal"
		>
		
		<ImageButton android:id="@+id/browse_vector_map_button_prev_selection"
			android:layout_width="70dip" 
			android:layout_height="50dip"
			android:src="@drawable/icon_left"
			/>
					
		<ImageButton android:id="@+id/browse_vector_map_button_next_selection"
			android:layout_width="70dip" 
			android:layout_height="50dip"
			android:src="@drawable/icon_right"
			/>					
		
	</LinearLayout>

	<FrameLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="5dip"
		android:layout_marginRight="10dip"
		>
		<ZoomControls android:id="@+id/browse_vector_map_zoom"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			 />
	</FrameLayout>

</RelativeLayout>
